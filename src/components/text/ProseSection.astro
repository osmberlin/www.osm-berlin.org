---
import { twMerge } from 'tailwind-merge'

type Props = {
  highlight?: boolean | undefined
  classes?: string | undefined
}

const { highlight, classes } = Astro.props
---

<section
  class={twMerge(
    'prose prose-lg prose-orange max-w-prose mb-20',
    'prose-headings:text-orange-700 prose-headings:mb-5',
    highlight ? 'notice bg-amber-100' : '',
    classes,
  )}
>
  <slot />
</section>
